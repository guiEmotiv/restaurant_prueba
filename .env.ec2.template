# Production Environment Variables Template
# Copy this file to .env.ec2 and configure with actual values
# WARNING: NEVER commit .env.ec2 to version control

# ===========================================
# DJANGO CONFIGURATION
# ===========================================
DJANGO_SECRET_KEY=your-secret-key-here-50-chars-minimum
DEBUG=False
DJANGO_ENV=production
ALLOWED_HOSTS=your-domain.com,your-ec2-ip

# ===========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===========================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=restaurant_db
POSTGRES_USER=restaurant_user
POSTGRES_PASSWORD=your-secure-postgres-password

# ===========================================
# AWS COGNITO AUTHENTICATION
# ===========================================
USE_COGNITO_AUTH=True
AWS_REGION=us-west-2
COGNITO_USER_POOL_ID=us-west-2_xxxxxxxxx
COGNITO_APP_CLIENT_ID=your-app-client-id

# ===========================================
# AWS ECR (for GitHub Actions)
# ===========================================
ECR_REGISTRY=123456789012.dkr.ecr.us-west-2.amazonaws.com
ECR_REPOSITORY=restaurant-web
IMAGE_TAG=latest

# ===========================================
# SSL/DOMAIN CONFIGURATION
# ===========================================
DOMAIN_NAME=your-domain.com
SSL_EMAIL=admin@your-domain.com

# ===========================================
# SECURITY SETTINGS
# ===========================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# ===========================================
# MONITORING (Optional)
# ===========================================
ENABLE_PROMETHEUS=true
ENABLE_GRAFANA=true
GRAFANA_ADMIN_PASSWORD=secure-grafana-password

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENCRYPTION_KEY=your-32-char-backup-encryption-key
BACKUP_RETENTION_DAYS=30
AWS_BACKUP_BUCKET=your-backup-bucket-name